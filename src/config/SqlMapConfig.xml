		<setting name="mapUnderscoreToCamelCase" value="true" />
	</settings>
	<typeAliases>
		<typeAlias alias="BoardVO" type="com.board.VO.BoardVO" />
		<typeAlias alias="MemberVO" type="com.mall.VO.MemberVO" />
		<typeAlias alias="ProductVO" type="com.mall.VO.ProductVO" />
		<typeAlias alias="CartVO" type="com.mall.VO.CartVO" />
		<typeAlias alias="OrderVO" type="com.mall.VO.OrderVO" />
	</typeAliases>

	<mappers>
		<mapper resource="com/board/dao/BoardMapper.xml" />
		<mapper resource="com/mall/mapper/MemberMapper.xml" />
